# Terminal UI with colorized ls
alias lsd='lsd --icon=always'
alias ls='lsd --color always --group-dirs first'
alias ll='lsd -l --color always --group-dirs first'
alias la='lsd -la --color always --group-dirs first'


# Basic navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

